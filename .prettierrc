{
  "bracketSpacing": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "quoteProps": "preserve",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "embeddedLanguageFormatting": "off",
        "tabWidth": 4
      }
    },
    {
      "files": [".prettierrc", ".renovaterc.json", "*.json"],
      "options": {"parser": "json"}
    },
    {
      "files": [".github/workflows/build-test-push.yml"],
      "options": {"parser": "yaml"}
    }
  ]
}
